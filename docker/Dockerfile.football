FROM tensorflow/tensorflow:2.1.0-gpu-py3

# Needed to disable interactive configuration by tzdata.
RUN ln -fs /usr/share/zoneinfo/Europe/Dublin /etc/localtime

RUN apt-get update && apt-get install -y \
  git \
  cmake \
  build-essential \
  libgl1-mesa-dev \
  libsdl2-dev \
  libsdl2-image-dev \
  libsdl2-ttf-dev \
  libsdl2-gfx-dev \
  libboost-all-dev \
  libdirectfb-dev \
  libst-dev \
  glee-dev \
  mesa-utils \
  xvfb \
  x11vnc \
  libsdl-sge-dev \
  python3-pip \
  libboost-all-dev \
  libboost-python-dev \
  tmux

WORKDIR /
RUN pip3 install gfootball==2.0.4
RUN pip3 install tensorflow_probability==0.9.0


ADD ./gfootball_zpp /gfootball_zpp/
WORKDIR /gfootball_zpp
RUN pip3 install -e .

RUN cp gfootball_zpp/scenarios/* /usr/local/lib/python3.6/dist-packages/gfootball/scenarios/
RUN rm -rf /usr/local/lib/python3.6/dist-packages/gfootball/scenarios/__pycache__

RUN cp gfootball_zpp/players/zpp.py /usr/local/lib/python3.6/dist-packages/gfootball/env/players/
RUN rm -rf /usr/local/lib/python3.6/dist-packages/gfootball/env/players/__pycache__

# Copy SEED codebase and SEED GRPC library.
ADD  ./seed_rl /seed_rl/
WORKDIR /seed_rl
ENTRYPOINT ["python", "gcp/run.py"]
